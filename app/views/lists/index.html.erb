<%= render "lists/banner"%>
<div class="container">
  <h1 class="mt-3 ">Your List</h1>
  <%= link_to "Create new list", new_list_path, class: "btn btn-primary"%>
  <% @lists.each do |list| %>
    <div class="cards">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_tag "http://source.unsplash.com/featured/?#{list.name}>&#{rand(1000)}"%>)">
        <h2><%= link_to list.name, list_path(list), class: 'text-decoration-none text-dark' %></h2>
      </div>
    </div>
  <% end %>
</div>
