<%= render "lists/banner"%>
<div class="container">
  <h1 class="mt-3 ">Your List</h1>
  <%= link_to "Create new list", new_list_path, class: "btn btn-primary"%>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category"
        style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
        url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU'%>)">
        <h2><%= link_to list.name, list_path(list), class: 'text-decoration-none text-dark' %></h2>
      </div>
    <% end %>
  </div>
</div>
