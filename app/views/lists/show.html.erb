<div class="container">
  <h1><%= @list.name %> movies</h1>
  <%= link_to "Go back to home", lists_path, class: "btn btn-light" %>
  <%= link_to "Bookmark movie", new_list_bookmark_path(@list), class: "btn btn-light" %>
  <div class="cards mt-3">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <%= image_tag bookmark.movie.poster_url, alt: "poster" %>
        <div class="card-trip-infos">
          <h2><%= bookmark.movie.title %></h2>
          <h2 class="card-trip-pricing">Rate: <%= bookmark.movie.rating %></h2>
          <p class="card-trip-pricing">Overview: <%= bookmark.movie.overview %></p>
          <%= link_to "🗑️", bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: "ほんまに消してええんか？" } %>
          <p>Comment</p>
          <br>
          <%= bookmark.comment %>
        </div>
      </div>
    <% end %>
  </div>
</div>
